</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script>
$(document).ready(function(){ 
$('.Faq__Question').click(function(e) {
  	e.preventDefault();

  var $thisVar = $(this);
    if($thisVar.next().hasClass("clsShow")){
        $(".Faq__AnswerWrapper").each(function() {
        $(this).removeClass("clsShow");
        $(this).addClass("clsHide");
        
    });
        $thisVar.next().removeClass("clsShow");
        $thisVar.next().addClass("clsHide");
    }else{
        $(".Faq__AnswerWrapper").each(function() {
        $(this).removeClass("clsShow");
        $(this).addClass("clsHide");
        
    });
        $thisVar.next().addClass("clsShow");
        $thisVar.next().removeClass("clsHide");
    }
});
});
 
</script>

